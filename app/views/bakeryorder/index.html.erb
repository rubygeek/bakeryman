<h1>Listing orders</h1>

<table>
  <tr>
    <th>Customer</th>
    <th>Pickup at</th>
    <th>Notes</th>
    <th>Created at</th>
    <th>Modified at</th>
  </tr>

<% for order in @bakeryorders %>
  <tr>
    <td><%=h order.customer.first %></td>
    <td><%=h order.customer.last %></td>
    <td><%=h order.pickup_at %></td>
    <td><%=h order.notes %></td>
    <td><%=h order.created_at %></td>
    <td><%=h order.modified_at %></td>
    <td><%= link_to 'Show', '' %></td>
    <td><%= link_to 'Edit', '' %></td>
    <td><%= link_to 'Destroy', '', :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

